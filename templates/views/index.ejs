<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<%- include('../partials/header.ejs')%>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1 class="alert alert-success text-center">add new student</h1>
             <div class="col">
             <form action="/" method="POST">
                      <input type="text" class="form-control" name="fname" placeholder="First name">
         </div> <br>
         <div class="col">
      <input type="text" class="form-control" name="lname" placeholder="Last Name">
         </div> <br>
         <div class="col">
      <input type="text" class="form-control" name="age" placeholder="enter your age">
         </div> <br>
          <div class="col">
      <input type="email" class="form-control" name="email" placeholder="email">
         </div> <br>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
</form>

        <div class="col-md-6" id="iconvala">
            <h1 class= "alert alert-danger text-center">student list</h1>
            <table class="table table-striped table-hover">
                <thead>
                   <tbody>
                        <tr>
                            <th>sr.no</th>
                        <th>first name</th>
                        <th>last name</th>
                        <th>age</th>
                        <th>email</th>
                        <th>action</th>
                    </tr>
                   
               
                   </tbody>
                   <tbody>
                               <%var i=1%>
                               
                               <% data.forEach((item)=>{ %>
                                <tr>
                                    
                                    <td><%= i++ %></td>
                                    <td><%= item.fname%></td>
                                    <td><%= item.lname%></td>
                                    <td><%= item.age%></td>
                                    <td><%= item.email%></td>
                                    <td>
                                        <div class="iconsec">
                                            <form action="/edit/<%= item._id%>" method="get" style="padding:6px; display: inline;">
                                                <button><i class="fas fa-pen-square text-info"></i></button>
                                             </form>
                                             <form action="/delete/<%= item._id%>" method="post" style="padding:6px; display: inline;">
                                                <button><i class="fas fa-trash text-danger"></i></button>
                                            </form>

                                        </div>
                                         
                                     </td>
                                 </tr>
                        <%  }) %>
                    </tbody>
                 

                   </tbody>
                </thead>
            </table>
        </div>
    </div>
</div>
</body>
</html>